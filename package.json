{
  "name": "evecutable-bundle",
  "version": "1.0.0",
  "description": "Example to creating single exexutable bundle",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "build": "esbuild server.js --bundle --platform=node --outfile=server-out.cjs --target=node20.3.1 --format=cjs --loader:.node=file",
    "test": "echo \"Error: no test specified\" && exit 1",
    "generate-sea": "node --experimental-sea-config sea-config.json",
    "generate-baseExe": "node -e \"require('fs').copyFileSync(process.execPath, 'CatExport.exe')\"",
    "merge-sea": "npx postject CatExport.exe NODE_SEA_BLOB sea-prep.blob ^ --sentinel-fuse NODE_SEA_FUSE_fce680ab2cc467b6e072b8b5df1996b2",
    "generate-exe": "yarn generate-sea & yarn generate-baseExe & yarn merge-sea",
    "package": "yarn build & yarn generate-sea & yarn generate-baseExe & yarn merge-sea"
  },
  "author": "Gaurav Goyal",
  "license": "ISC",
  "dependencies": {
    "pdfjs-dist": "3.11.174"
  },
  "devDependencies": {
    "esbuild": "^0.18.17"
  }
}